<?xml version="1.0" encoding="UTF-8"?>
<actionSystem>
    <context id="home.MainMenu" prefix="iemgr." mode="find">
        <group id="ImportExportGroup">
            <rules>
                <rule id="core.OpenGroup" mode="insertBehind"/>
            </rules>
            <content>
                <menu id="Import" icon="svg(:/svg/home/import-file.svg)">
                    <action id="ImportProject" command="Import: Import Project"/>
                    <action id="ImportAudio" command="Import: Import Audio"/>
                </menu>
            </content>
        </group>
    </context>

    <context id="project.MainMenu" prefix="iemgr." mode="find">
        <group id="ImportExportGroup">
            <rules>
                <rule id="core.SaveGroup" mode="insertBehind"/>
            </rules>
            <content>
                <menu id="Import">
                    <action id="ImportProject"/>
                    <action id="ImportAudio"/>
                </menu>
                <menu id="Export">
                    <action id="ExportProject" command="Export: Export Project"/>
                    <action id="ExportAudio" command="Export: Export Audio"/>
                </menu>
            </content>
        </group>
    </context>
</actionSystem>